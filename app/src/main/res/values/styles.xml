<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btn_config">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">320dp</item>
        <item name="android:maxHeight">48dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginEnd">28dp</item>
    </style>

    <style name="blue_solid_btn" parent="btn_config">
        <item name="android:background">@drawable/blue_solid_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>